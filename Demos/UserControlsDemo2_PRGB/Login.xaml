<UserControl x:Class="UserControlsDemo2_PRGB.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControlsDemo2_PRGB"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="32">UserName</TextBlock>
        <TextBlock FontSize="32">Password</TextBlock>
        <Button Content="Log In" FontSize="32"></Button>
        <CheckBox Content="Remember Me" FontSize="32"></CheckBox>
    </StackPanel>
</UserControl>
